WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS = `wx-config --cflags` -Wall
RESINC = 
LIBDIR = 
LIB = 
LDFLAGS = `wx-config --libs`

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS) -O2
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE =  -s $(LDFLAGS)
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE = bin/Release/BirraMatic

OBJ_RELEASE = $(OBJDIR_RELEASE)/BirraMaticApp.o $(OBJDIR_RELEASE)/BirraMaticMain.o $(OBJDIR_RELEASE)/GUIDialog.o

all: release

clean: clean_release

before_release: 
	test -d bin/Release || mkdir -p bin/Release
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release: 

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE)  $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/BirraMaticApp.o: BirraMaticApp.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c BirraMaticApp.cpp -o $(OBJDIR_RELEASE)/BirraMaticApp.o

$(OBJDIR_RELEASE)/BirraMaticMain.o: BirraMaticMain.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c BirraMaticMain.cpp -o $(OBJDIR_RELEASE)/BirraMaticMain.o

$(OBJDIR_RELEASE)/GUIDialog.o: GUIDialog.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c GUIDialog.cpp -o $(OBJDIR_RELEASE)/GUIDialog.o

clean_release: 
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	rm -rf bin/Release
	rm -rf $(OBJDIR_RELEASE)

.PHONY: before_debug after_debug clean_debug before_release after_release clean_release

